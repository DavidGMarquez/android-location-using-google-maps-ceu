<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="wrap_content"
	android:padding="5dip" android:id="@+id/formalta" android:background="@drawable/interior2"
	android:orientation="vertical">



	<TextView android:id="@+id/label" android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
		android:typeface="serif" android:text="Descripción vehículo" android:textColor="#ffff0000" android:textStyle="bold|italic"/>


	<EditText android:id="@+id/id_vehiculo" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:background="@android:drawable/editbox_background"
		android:singleLine="true" android:layout_below="@id/label" />

	<TextView android:id="@+id/label2" android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
		android:text="Matrícula" android:layout_below="@id/id_vehiculo" android:textColor="#ffffff00" android:textStyle="bold|italic" android:typeface="serif"/>
		
	<EditText android:id="@+id/id_matricula" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:background="@android:drawable/editbox_background"
		android:singleLine="true" android:layout_below="@id/label2" />


	<Button android:id="@+id/btn_showMessage" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_below="@id/id_matricula"
		android:layout_alignParentRight="true" android:layout_marginLeft="10px"
		android:text="Guardar" />

</RelativeLayout>